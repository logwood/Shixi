<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="org.example.shixi.mapper.RoleResourceMapper">

    <sql id="Base_Column_List">
        role_id, resource_id, authority
    </sql>

    <select id="listResource" resultType="org.example.shixi.tables.entity.ResourceEntity">
        select
            c.id,
            c.parent_id,
            c.name,
            c.`path`,
        c.uri,
        a.authority
        from
            role_resource a
            left join role b on
            a.role_id = b.id
            and b.deleted = 0
            left join resource c on
            a.resource_id = c.id
            and b.deleted = 0
        where
            b.id in
            <foreach collection="roleIdList" item="roleId" open="(" separator="," close="ï¼‰">
                ${roleId}
            </foreach>
    </select>
</mapper>